#!/bin/bash

#
# Ubiquitous Moodle
#
# @author Luke Carrier <luke@carrier.im>
# @copyright 2016 Luke Carrier
#

set -euo pipefail
IFS=$'\n\t'

shopt -s extglob
shopt -s nullglob

in_array() {
    local haystack=${1}[@]
    local needle="$2"

    for i in "${!haystack}"; do
        if [[ "$i" == "$needle" ]]; then
            return 0
        fi
    done

    return 1
}

UBIQUITOUS_JAVA="/usr/bin/java -XX:NewSize=128m -XX:MaxNewSize=128m -XX:SurvivorRatio=8 -Xms512m -Xmx512m -Djava.net.preferIPv4Stack=true"
UBIQUITOUS_JAVA_CHROME="-Dwebdriver.chrome.driver=/opt/selenium/chromedriver/chromedriver"
UBIQUITOUS_JAVA_SELENIUM="-jar /opt/selenium/selenium-server.jar"
UBIQUITOUS_XVFB_PIDFILE="/run/xvfb.pid"
UBIQUITOUS_XVFB_DISPLAY=":99"

UBIQUITOUS_NGINX_PIDFILE="/run/nginx.pid"
UBIQUITOUS_PHPFPM_PIDFILE="/run/php/php7.0-fpm.pid"
UBIQUITOUS_SELENIUM_HUB_PIDFILE="/run/selenium-hub.pid"
UBIQUITOUS_SELENIUM_NODE_PIDFILE="/run/selenium-node.pid"

if [ $# -lt 1 ] || [ $# -gt 2 ]; then
    abort $ERROR_PARAMS "usage: $(basename "$0") <ACTION (start, stop, restart)> [SERVICE (nginx, php-fpm, postgresql, selenium-hub, selenium-node, xvfb)]"
fi

action="$1"
IFS=' ' declare -a UBIQUITOUS_SERVICES=(nginx php-fpm postgresql selenium-hub selenium-node xvfb)
if in_array UBIQUITOUS_SERVICES "${2:-UNSET}"; then
    services="$2"
else
    services="${UBIQUITOUS_SERVICES[@]}"
fi

start() {
    if [[ " ${services[@]} " =~ " nginx " ]]; then
        start-stop-daemon --start \
                --oknodo --pidfile "$UBIQUITOUS_NGINX_PIDFILE" \
                --startas "$(which nginx)" \
                -- -g 'daemon on; master_process on;'
    fi

    if [[ " ${services[@]} " =~ " php-fpm " ]]; then
        start-stop-daemon --start \
                --oknodo --pidfile "$UBIQUITOUS_PHPFPM_PIDFILE" \
                --startas "$(which php-fpm7.0)" \
                -- --daemonize --fpm-config /etc/php/7.0/fpm/php-fpm.conf
    fi

    if [[ " ${services[@]} " =~ " postgresql " ]]; then
        /usr/bin/pg_ctlcluster \
                --skip-systemctl-redirect -m fast 9.5-main start -- -w
    fi

    if [[ " ${services[@]} " =~ " selenium-hub " ]]; then
        start-stop-daemon --start \
                --oknodo --background --make-pidfile --pidfile "$UBIQUITOUS_SELENIUM_HUB_PIDFILE" \
                --user selenium --startas /bin/bash \
                -- -c "exec $UBIQUITOUS_JAVA $UBIQUITOUS_JAVA_SELENIUM -role hub -hubConfig /opt/selenium/hub.json -log /var/log/selenium-hub.log"
    fi

    if [[ " ${services[@]} " =~ " xvfb " ]]; then
        start-stop-daemon --start \
                --oknodo --background --make-pidfile --pidfile "$UBIQUITOUS_XVFB_PIDFILE" \
                --user selenium --startas /usr/bin/Xvfb \
                -- "$UBIQUITOUS_XVFB_DISPLAY" -screen 0 1280x1024x24
    fi

    if [[ " ${services[@]} " =~ " selenium-node " ]]; then
        start-stop-daemon --start \
                --oknodo --background --make-pidfile --pidfile "$UBIQUITOUS_SELENIUM_NODE_PIDFILE" \
                --user selenium --startas /bin/bash \
                -- -c "DISPLAY="$UBIQUITOUS_XVFB_DISPLAY" exec $UBIQUITOUS_JAVA $UBIQUITOUS_JAVA_CHROME $UBIQUITOUS_JAVA_SELENIUM -role node -nodeConfig /opt/selenium/node.json -log /var/log/selenium-node.log"
    fi
}

stop() {
    if [[ " ${services[@]} " =~ " nginx " ]]; then
        start-stop-daemon --stop \
                --oknodo --retry 5 --pidfile "$UBIQUITOUS_NGINX_PIDFILE"
    fi

    if [[ " ${services[@]} " =~ " php-fpm " ]]; then
        start-stop-daemon --stop \
                --oknodo --retry 5 --pidfile "$UBIQUITOUS_PHPFPM_PIDFILE"
    fi

    if [[ " ${services[@]} " =~ " postgresql " ]]; then
        /usr/bin/pg_ctlcluster \
                --skip-systemctl-redirect -m fast 9.5-main stop -- -w
    fi

    if [[ " ${services[@]} " =~ " selenium-hub " ]]; then
        start-stop-daemon --stop \
                --oknodo --retry 5 --pidfile "$UBIQUITOUS_SELENIUM_HUB_PIDFILE"
    fi

    if [[ " ${services[@]} " =~ " selenium-node " ]]; then
        start-stop-daemon --stop \
                --oknodo --retry 5 --pidfile "$UBIQUITOUS_SELENIUM_NODE_PIDFILE"
    fi

    if [[ " ${services[@]} " =~ " xvfb " ]]; then
        start-stop-daemon --stop \
                --oknodo --retry 5 --pidfile "$UBIQUITOUS_XVFB_PIDFILE"
    fi
}

case "$action" in
    start)
        start
        ;;

    stop)
        stop
        ;;

    restart)
        stop
        start
        ;;
esac
